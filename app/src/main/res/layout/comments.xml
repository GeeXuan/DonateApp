<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/commentbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/imgView_proPic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_propic1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgView_proPic"
            android:orientation="vertical"
            android:background="@color/light_grey">

            <TextView
                android:id="@+id/commenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Karun Shrestha"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="sans-serif"
                android:text="Not bad."
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/commenttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentbox"
        android:layout_marginLeft="70dp"
        android:fontFamily="sans-serif"
        android:text="11 hrs"
        android:textColor="@color/grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/commentlike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentbox"
        android:layout_toRightOf="@+id/commenttime"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:text="Like"
        android:textColor="@color/grey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/commentreply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commentbox"
        android:layout_toRightOf="@+id/commentlike"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif"
        android:text="Reply"
        android:textColor="@color/grey"
        android:textSize="13sp" />



</RelativeLayout>